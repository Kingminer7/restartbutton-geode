{
	"geode": "4.0.0",
	"gd": {
		"win": "2.2073",
		"android": "2.2073",
		"mac": "2.2073"
	},
	"version": "v1.1.4",
	"id": "weebify.restartbtn",
	"name": "Restart Buttons",
	"developer": "Weebify",
	"description": "Adds restart buttons.",
	"tags": ["interface", "utility"],
	"resources": {
		"sprites": [
			"resources/image.png"
		]
	},
	"links": {
		"source": "https://github.com/Weebifying/restartbutton-geode"
	},
	"settings": {
		"size": {
            "name": "Size",
			"description": "How big the buttons should be.",
            "type": "float",
            "default": 1,
            "min": 1,
            "max": 2,
            "control": {
                "slider": true,
				"slider-step": 0.01
			}
		},
		"keybind_anywhere": {
			"name": "Keybind works anywhere",
			"description": "...except the editor",
			"type": "bool",
			"default": false
		},
		"exit": {
			"name": "Show Exit button",
			"type": "bool",
			"default": true
		},
		"restart": {
			"name": "Show Restart button",
			"type": "bool",
			"default": true
		},
		"reload-textures": {
			"name": "Show Reload Textures button",
			"type": "bool",
			"default": true
		}
	}
}
